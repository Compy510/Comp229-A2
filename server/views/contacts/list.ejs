<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Main Content-->
<main class="container">
 <div class="col-md-offset-3 col-md-8">
     <h1><%= title %> </h1>

     <% if(typeof displayName == 'string' && displayName) { %>
     <a href="/contacts-list/add" class="btn btn-primary" role="button">
    <i class="fas fa-plus-circle"></i> Add a Contact</a>
    <% } %>
     <br>
     <table class="table table-bordered table-striped table-hover">
         <!--Header Row-->
         <tr>
             <th class="text-center">Contact Name</th>
             <th class="text-center">Contact Number</th>
             <th class="text-center">Email</th>
             <% if(typeof displayName == 'string' && displayName) { %>
             <th class="text-center"></th>
             <th class="text-center"></th>
             <% } %>
         </tr>

         <!--Repeatable Template Row-->
         <% for(let count = 0; count < BookList.length; count++) { %> 
            <tr>
                <td class="text-center"><%= BookList[count].contactName %></td>
                <td class="text-center"><%= BookList[count].contactNumber %></td>
                <td class="text-center"><%= BookList[count].email %></td>

                <% if(typeof displayName == 'string' && displayName) { %>
                <td class="text-center">
                    <a href="/contacts-list/update/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Update</a>
                </td>
                <td class="text-center">
                    <a href="/contacts-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete</a>
                </td>
                <% } %>
            </tr>
         <% } %>
     </table> 
 </div>
</main>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>