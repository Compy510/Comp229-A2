<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Contact Name</label>
                <input type="text" class="form-control"
                id="contactNameTextField"
                placeholder="Enter the Name of the Contact"
                name="contactName" 
                value="<%= book.contactName %>"
                required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Contact Number</label>
                <input type="text" class="form-control"
                id="contactNumberTextField"
                placeholder="Enter the Phone Number"
                name="author" 
                value="<%= book.contactNumber %>"
                required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Email</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter the Email Address"
                name="email" 
                value="<%= book.email %>"
                required>
            </div>

            <br>
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Submit</button>

                <a href="/contacts-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>

        </form>

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>